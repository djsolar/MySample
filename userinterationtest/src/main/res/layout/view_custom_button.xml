<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/custom_song_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/tv_custom_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorAccent"
        android:layout_toEndOf="@+id/custom_song_icon"
        android:layout_toRightOf="@+id/custom_song_icon"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_custom_song_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/custom_song_icon"
        android:layout_alignEnd="@+id/tv_custom_song_name"
        android:layout_alignRight="@+id/tv_custom_song_name"
        android:textColor="@color/colorAccent"
        android:text="TextView" />

    <ImageButton
        android:id="@+id/btn_custom_play"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_custom_next"
        android:layout_toStartOf="@+id/btn_custom_next" />

    <ImageButton
        android:id="@+id/btn_custom_next"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignTop="@+id/btn_custom_play"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />
</RelativeLayout>